{
  "name": "gm-electron-erp",
  "version": "1.0.0",
  "description": "观麦数字化管理系统",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac --universal"
  },
  "author": "深圳市观麦网络科技有限公司",
  "license": "ISC",
  "devDependencies": {
    "electron": "21.4.4",
    "electron-builder": "^24.7.0",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "electron-updater": "^6.3.4",
    "serialport": "^12.0.0"
  },
  "build": {
    "appId": "cn.guanmai.x.erp",
    "productName": "观麦数字化管理系统",
    "copyright": "Copyright © 2020 gm",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "generic",
      "url": "https://js.guanmai.cn/v2/static/file/erp/"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon/icon.png"
    },
    "mac": {
      "icon": "icon/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
